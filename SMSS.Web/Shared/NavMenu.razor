    <MudNavLink Href="/counter" Match="NavLinkMatch.Prefix">counter</MudNavLink>
    <MudNavGroup Title="Administration" Expanded="true">
        <MudNavLink Href="/staffindex" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.SupervisedUserCircle" IconColor="Color.Inherit">Add/Update Staff</MudNavLink>
        <MudNavLink Href="/studentindex" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.People" IconColor="Color.Inherit">Add/Update Student</MudNavLink>
        <MudNavLink Href="/classIndex" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.RecentActors" IconColor="Color.Inherit">Add/Update Class</MudNavLink>
        <MudNavLink Href="/subjectindex" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.MenuBook" IconColor="Color.Inherit">Add/Update Subjects</MudNavLink>
